[module/space]
type = custom/text
format = "  "
format-background = ${colors.background}

[module/sep]
type = custom/text
format = | 
format-background = ${colors.background}
format-foreground = ${colors.black}
content-padding = 1

[module/LD]
type = custom/text
format = "%{T6}ÓÇ∂%{T-}"
format-foreground = ${colors.liteblush}
format-background = ${colors.everblush}
format-padding = 0

[module/RD]
type = custom/text
format = "%{T6}ÓÇ¥%{T-}"
format-foreground = ${colors.liteblush}
format-background = ${colors.everblush}
format-padding = 0

[module/arch-updates]
type = custom/script
exec = ~/.config/polybar/scripts/arch-updates.sh &
interval = 3600
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-prefix = "ÔÜ≥  "
format-prefix-foreground = ${colors.blue}
label = %output%
format-prefix-font = 2


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-prefix = "ÔàÄ "
format-mounted-prefix-foreground = ${colors.green}
;format-mounted-prefix-background = ${colors.liteblush}
label-mounted = %free%
label-mounted-foreground = ${colors.foreground}
label-unmounted = %mountpoint% not mounted
;label-mounted-background = ${colors.liteblush}
format-mounted-prefix-font = 2

[module/cpu]
;https://github.com/jaagr/polybar/wiki/Module:-cpu
type = internal/cpu
interval = 2
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-prefix = "ÔÇÖ "
format-prefix-foreground = ${colors.yellow}
label = %percentage:2%%
format-font = 2

[module/temperature-cpu]
format-prefix= "Ôãã "
type = internal/temperature
;thermal-zone =
interval = 20
format = <label>
format-prefix-foreground = ${colors.red}
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon2/temp1_input
label = %temperature-c%
label-foreground = ${colors.foreground}

[module/temperature-gpu]
type = internal/temperature
;thermal-zone =
interval = 20
format = <label>
format-prefix-foreground = ${colors.red}
hwmon-path = /sys/devices/pci0000:00/0000:00:03.1/0000:26:00.0/0000:27:00.0/0000:28:00.0/hwmon/hwmon3/temp2_input
label = %temperature-c%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "Ôãõ "
format-prefix-foreground = ${colors.red}
label = %gb_used% %percentage_used%%
label-foreground = ${colors.foreground}

[module/brightness]
type = custom/script
exec = brightnessctl g | awk '{print int($1 / 1000)}'  # Display brightness in percentage
tail = true
format = %output%
label = %{F#${colors.blue}}%output%%{F-}

; Define your ramp using symbols and percentages
ramp-0 = Ôî¢
ramp-1 = Ôî¢
ramp-2 = Û∞Éù
ramp-3 = Û∞Éù
ramp-4 = Û∞Éû
ramp-5 = Û∞Éû
ramp-6 = Û∞Éü
ramp-7 = Û∞Éü
ramp-8 = Û∞É†
ramp-9 = Û∞É†

ramp-font = 7
ramp-foreground = ${colors.blue}

enable-scroll = true

scroll-up = brightnessctl s +10%
scroll-down = brightnessctl s 10%-


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo


use-ui-max = false


interval = 5

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.background}
format-volume-foreground = ${colors.foreground}

format-muted = <label-muted>
format-muted-background = ${colors.background}
format-muted-prefix = Ô™Ä
format-muted-prefix-foreground = ${colors.red}

label-volume = %percentage%%
label-muted = " Mute"
label-muted-foreground = ${colors.red}

ramp-volume-0 = Óª®
ramp-volume-1 = ÔÄ¶
ramp-volume-2 = ÔÄß
